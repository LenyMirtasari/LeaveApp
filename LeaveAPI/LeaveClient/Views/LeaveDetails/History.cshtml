@{
    Layout = "_LeaveLayout";
}
<div class="mb-3" id="tabel2">
    <button type="submit" id="submit" class="btn btn-primary" onclick="LeaveRequest()"><small>+ Leave Request</small></button>
</div>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">Leave Request History</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="history" class="table-bordered table-striped" style="width:100%">
                    <thead>
                        <tr>

                            <th>No</th>
                            <th>Leave ID</th>
                            <th>Full Name</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th>Note</th>
                            <th>Submit Date</th>
                            <th>Approval</th>
                            <th>Leave Type</th>
                        </tr>
                    </thead>
                    <tbody id="tablePoke">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalLeaveRequest" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Update Employee</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="needs-validation" id="formRequestLeave2">
                    <div class="row form-group">
                        <div class="col">
                            <label for="employeeId">Employee ID</label>
                            <input type="text" id="employeeId2" name="employeeId" class="form-control" placeholder="" disabled>
                        </div>
                        <div class="col">
                            <label for="fullName">Name</label>
                            <input type="text" id="fullName2" name="fullName" class="form-control" placeholder="" disabled>
                        </div>
                        <div class="col">
                            <label for="fullName">Email</label>
                            <input type="text" id="email2" name="fullName" class="form-control" placeholder="" disabled>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col">
                            <label for="employeeId">Phone Number</label>
                            <input type="text" id="phoneNumber2" name="employeeId" class="form-control" placeholder="" disabled>
                        </div>
                        <div class="col">
                            <label for="fullName">Total Leave</label>
                            <input type="text" id="totalLeaves2" name="fullName" class="form-control" placeholder="" disabled>
                        </div>
                        <div class="col">
                            <label for="fullName">Eligible Leave</label>
                            <input type="text" id="eligibleLeave2" name="fullName" class="form-control" placeholder="" disabled>
                        </div>
                    </div>


                    <div class="row form-group">
                        <div class="col">
                            <label for="startDate">Request Number</label>
                            <input type="text" name="startDate" id="rNumber2" class="form-control" placeholder="" disabled>
                        </div>
                        <div class="col">
                            <label for="endDate">Manager</label>
                            <input id="managerId2" type="hidden" name="name" class="form-control" value="" disabled />
                            <input id="managerName2" type="text" name="name" class="form-control" value="" disabled />
                        </div>
                        <div class="col">
                            <label for="leaveType">Leave Type</label>
                            <select id="LeaveType2" name="LeaveType" class="form-control">
                                <option selected>Choose...</option>
                                <option>...</option>
                            </select>
                        </div>
                    </div>
                    <div class="row form-group">
                        <div class="col">
                            <label for="startDate">Start Date</label>
                            <input id="startDate2" type="date" class="form-control" name="startDate" placeholder="Start Date" />
                        </div>
                        <div class="col">
                            <label for="endDate">End Date</label>
                            <input id="endDate2" type="date" class="form-control" name="endDate" placeholder="End Date" />
                        </div>
                        <div class="col">
                            <label for="notes">Notes :</label>
                            <textarea id="notes2" name="notes" class="form-control" maxlength="225" rows="3" placeholder="This notes has a limit of 225 chars."></textarea>
                        </div>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                @*<button type="button" class="btn btn-primary" onclick="Update(document.getElementById('Nik1').value)">Save changes</button>*@
                <button type="submit" id="submit" class="btn btn-primary" onclick="Validation()">Save</button>
            </div>
        </div>
    </div>
</div>
